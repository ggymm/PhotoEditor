<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.minetsh.imaging.view.IMGView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/header_height"
        android:layout_marginBottom="@dimen/bottom_header"
        android:background="@color/common_background_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/titleBar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_height"
            android:background="@color/title_bar_color"
            app:rightTitle="保存"
            app:rightTitleColor="@color/title_bar_right_color"
            app:title="@string/erase_pen" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/common_background_color"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/erase_pen_size_text" />

            <SeekBar
                android:id="@+id/penSize"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:max="30"
                android:maxHeight="36dp"
                android:minHeight="36dp"
                android:progressDrawable="@drawable/doodle_seekbar_background"
                android:thumb="@drawable/doodle_thumb_seekbar"
                android:thumbOffset="0dp" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/doErase"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:onClick="onClick"
                android:text="@string/erase_btn_text"
                app:qmui_isRadiusAdjustBounds="true" />

        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_background_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="16dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/eraseMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_icons8_erase_btn"
                android:gravity="center"
                android:onClick="onClick" />

            <Space
                android:layout_width="@dimen/image_mode_space"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/restoreMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_icons8_re_erase_btn"
                android:gravity="center" />

            <Space
                android:layout_width="@dimen/image_mode_space"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/moveMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_icons8_move_btn"
                android:gravity="center"
                android:onClick="onClick" />

            <Space
                android:layout_width="@dimen/image_mode_space"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/compare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_icons8_compare_btn"
                android:gravity="center"
                android:onClick="onClick" />

        </RadioGroup>

    </LinearLayout>


</FrameLayout>